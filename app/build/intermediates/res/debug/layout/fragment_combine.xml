<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.purdue.PavementPatchingTracker.CombineActivity$PlaceholderFragment" >

    <TextView
        android:id="@+id/textViewVehicleTypeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="70dp"
        android:text="@string/vehicle_combine"
        android:textSize="60sp" />

    <TextView
        android:id="@+id/textViewCktStateLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="30dp"
        android:text="@string/ckt_state"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/textViewCktState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:text="@string/ckt_state_initializing"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/textViewTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/gps_attributes_margin_bottom"
        android:layout_marginLeft="@dimen/gps_attributes_margin_left"
        android:text="@string/time_gps_text_view_default"
        android:textSize="@dimen/gps_attributes_font_size" />

    <TextView
        android:id="@+id/textViewLatGps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/gps_attributes_margin_bottom"
        android:layout_marginLeft="@dimen/gps_attributes_margin_left"
        android:text="@string/lat_gps_text_view_default"
        android:textSize="@dimen/gps_attributes_font_size" />

    <TextView
        android:id="@+id/textViewLonGps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/gps_attributes_margin_bottom"
        android:layout_marginLeft="@dimen/gps_attributes_margin_left"
        android:text="@string/lon_gps_text_view_default"
        android:textSize="@dimen/gps_attributes_font_size" />

    <TextView
        android:id="@+id/textViewAltitudeGps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/gps_attributes_margin_bottom"
        android:layout_marginLeft="@dimen/gps_attributes_margin_left"
        android:text="@string/altitude_gps_text_view_default"
        android:textSize="@dimen/gps_attributes_font_size" />

    <TextView
        android:id="@+id/textViewSpeedGps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/gps_attributes_margin_bottom"
        android:layout_marginLeft="@dimen/gps_attributes_margin_left"
        android:text="@string/speed_gps_text_view_default"
        android:textSize="@dimen/gps_attributes_font_size" />

    <TextView
        android:id="@+id/textViewBearingGps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/gps_attributes_margin_bottom"
        android:layout_marginLeft="@dimen/gps_attributes_margin_left"
        android:text="@string/bearing_gps_text_view_default"
        android:textSize="@dimen/gps_attributes_font_size" />

    <TextView
        android:id="@+id/textViewAccuracyGps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/gps_attributes_margin_bottom"
        android:layout_marginLeft="@dimen/gps_attributes_margin_left"
        android:text="@string/accuracy_gps_text_view_default"
        android:textSize="@dimen/gps_attributes_font_size" />

    <Button
        android:id="@+id/ButtonChangeKartUnloadingState"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@color/kart_not_unloading"
        android:onClick="changeCombineUnloadingState"
        android:text="@string/kart_not_unloading"
        android:textSize="50sp" />

</LinearLayout><!-- From: file:/Users/Zyglabs/Dropbox/ZygLabsAndroid2015/MyApps/PavementPatchingTracker/app/src/main/res/layout/fragment_combine.xml -->